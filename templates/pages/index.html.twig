{{ include('pages/inc/header.html.twig') }}
<head>
    
</head>
<html>
    {% for succes_message in app.session.flashbag.get('message') %}
        <div class="alert alert-dismissible alert-success">
        <button type="button" class="close"
            aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        {{ succes_message }}
        </div>
    {% endfor %}
    <h3 class="title_h3_center">Nuestros Proveedores</h3>
    <div class="container">
        <a href="{{ path('create_proveedores_route') }}" class="btn btn-outline-danger">Añade un nuevo proveedor</a>
        <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">nombre</th>
            <th scope="col">Email</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Tipo de proveedor</th>
            <th scope="col">Actvio</th>
            </tr>
        </thead>
        <tbody>
        {% for proveedor in proveedores %}
            <tr class="table-active">
                <td>{{ proveedor.id }}</td>
                <td>{{ proveedor.nombre }}</td>
                <td>{{ proveedor.email }}</td>
                <td>{{ proveedor.telefono }}</td>
                <td>{{ proveedor.tipoProveedor }}</td>
                <td>{{ proveedor.activo }}</td>
                <td><a href="{{ path('update_proveedores_route', {'id': proveedor.id}) }}" class="btn btn-primary">Edit</a></td>
                <td><a href="{{ path('delete_proveedores_route', {'id': proveedor.id}) }}" class="btn btn-danger">Delete</a></td> 
            </tr>
        {% else %}
                <td>No se han encotrado datos</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
</body>
</html>